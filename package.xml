<?xml version="1.0"?>
<package name="info.codingcorner.wcf.emailBlacklist" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/package.xsd">
	<packageinformation>
		<packagename>Simple e-mail blocklist</packagename>
		<packagedescription>Blocks e-mail addresses based on their suffix</packagedescription>
		<isunique>1</isunique>
		<version>1.0.3</version>
		<date>2016-09-28</date>
		<plugin>com.woltlab.wcf.form.user</plugin>
	</packageinformation>

	<authorinformation>
		<author>Markus 'RouL' Zhang</author>
		<authorurl>http://codingcorner.info/</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="1.1.10">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="1.1.6 pl 1">com.woltlab.wcf.form.user</requiredpackage>
	</requiredpackages>

	<instructions type="install">
		<!-- files -->
		<files>files.tar</files>

		<!-- config -->
		<options>options.xml</options>
		<eventlistener>eventlistener.xml</eventlistener>

		<!-- languages -->
		<languages languagecode="de-informal">language/de-informal.xml</languages>
		<languages languagecode="de">language/de.xml</languages>
		<languages languagecode="en">language/en.xml</languages>
	</instructions>

	<instructions type="update" fromversion="1.0.0">
		<files>files.tar</files>
		<eventlistener>eventlistener_1.0.0_1.0.1.xml</eventlistener>
		<languages languagecode="en">language/en.xml</languages>
	</instructions>

	<instructions type="update" fromversion="1.0.1*">
		<files>files.tar</files>
		<languages languagecode="en">language/en.xml</languages>
	</instructions>

	<instructions type="update" fromversion="1.0.2">
		<languages languagecode="en">language/en.xml</languages>
	</instructions>
</package>
